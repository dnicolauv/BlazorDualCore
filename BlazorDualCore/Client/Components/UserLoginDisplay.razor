@using System.Runtime.InteropServices;

<div class="ml-3 relative" @onmouseover="ShowMenu">
    <div>
        <button class="max-w-xs bg-gray-800 rounded-full flex items-center text-sm focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-offset-gray-800 focus:ring-white" id="user-menu" aria-haspopup="true">
            <span class="sr-only">Open user menu</span>
            <AuthorizeView>
                <Authorized>
                    <NavLink href="@(isWasm ? "authentication/manage" : "Identity/Account/Manage")">
                        <img class="h-8 w-8 rounded-full" src="https://images.unsplash.com/photo-1472099645785-5658abf4ff4e?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=facearea&facepad=2&w=256&h=256&q=80" alt="">
                    </NavLink>
                </Authorized>
                <NotAuthorized>
                    <NavLink href="@(@isWasm ? "authentication/login" : "Identity/Account/Login")">
                        <img class="h-8 w-8 rounded-full" src="data:image/png;base64," alt="" />
                    </NavLink>
                </NotAuthorized>
            </AuthorizeView>
        </button>
    </div>
    <!--
        Profile dropdown panel, show/hide based on dropdown state.

        Entering: "transition ease-out duration-100"
        From: "transform opacity-0 scale-95"
        To: "transform opacity-100 scale-100"
        Leaving: "transition ease-in duration-75"
        From: "transform opacity-100 scale-100"
        To: "transform opacity-0 scale-95"
    -->
    <div @onmouseout="HideMenu" style="@NavMenuCssStyle" class="z-10 transition-opacity ease-in-out duration-100 opacity-0 origin-top-right absolute right-0 mt-2 w-48 rounded-md shadow-lg py-1 bg-white ring-1 ring-black ring-opacity-5" role="menu" aria-orientation="vertical" aria-labelledby="user-menu">
        <AuthorizeView>
            <NotAuthorized>
                <NavLink href="@(isWasm ? "authentication/login": "Identity/Account/Login")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Sign In</NavLink>
                <NavLink href="@(isWasm ? "authentication/register" : "Identity/Account/Register")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Register</NavLink>
            </NotAuthorized>
            <Authorized>
                <NavLink href="@(isWasm ? "authentication/manage" : "Identity/Account/Manage")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Your Profile</NavLink>
                <NavLink href="@(isWasm ? "authentication/logout" : "Identity/Account/Logout")" class="block px-4 py-2 text-sm text-gray-700 hover:bg-gray-100" role="menuitem">Sign out</NavLink>
            </Authorized>
        </AuthorizeView>
    </div>
</div>


@code {

    bool isWasm = RuntimeInformation.IsOSPlatform(OSPlatform.Create("BROWSER"));

    private string NavMenuCssStyle = "opacity: 0";

    private async Task ShowMenu()
    {
        NavMenuCssStyle = "opacity: 100";
    }

    private async Task HideMenu()
    {
        NavMenuCssStyle = "opacity: 0";
    }
}