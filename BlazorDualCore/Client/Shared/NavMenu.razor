@inject NavigationManager _navManager

<nav class="bg-gray-800">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-16">
            <div class="flex items-center">
                <div class="flex-shrink-0">
                    <img class="h-8 w-8" src="https://tailwindui.com/img/logos/workflow-mark-indigo-500.svg" alt="Workflow">
                </div>
                <div class="hidden md:block">
                    <div class="ml-10 flex items-baseline space-x-4">
                        <NavLink href="" Match="NavLinkMatch.All" ActiveClass="text-white bg-gray-900" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 focus:text-white focus:bg-gray-900">Dashboard</NavLink>

                        <NavLink href="team" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:text-white focus:bg-gray-900">Team</NavLink>

                        <NavLink href="projects" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:text-white focus:bg-gray-900">Projects</NavLink>

                        <NavLink href="calendar" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:text-white focus:bg-gray-900">Calendar</NavLink>

                        <NavLink href="counter" class="px-3 py-2 rounded-md text-sm font-medium text-gray-300 hover:text-white hover:bg-gray-700 focus:text-white focus:bg-gray-900">Reports</NavLink>
                    </div>
                </div>
            </div>
            <div class="hidden md:block">
                <div class="ml-4 flex items-center md:ml-6">

                    <NotificationBell />

                    <UserLoginDisplay />

                </div>
            </div>
            <div class="-mr-2 flex md:hidden">
                <!-- Mobile menu button -->
                <MobileMenuButton />
            </div>
        </div>
    </div>
</nav>

